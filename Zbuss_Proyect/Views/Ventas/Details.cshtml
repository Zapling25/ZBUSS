@model Zbuss_Proyect.Models.TbDetalleVenta



@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h1>Details</h1>



<div class="container">
    <div class="row justify-content-center">
        <h4>TbDetalleVenta</h4>
        <hr />
        <dl class="col-5" id="Ventas">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaVenta)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaVenta)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SubTotal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SubTotal)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MetodoPago)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MetodoPago)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Igv)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Igv)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descuento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descuento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Total)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Total)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdasientoNavigation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdasientoNavigation.CodAsiento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IduserNavigation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IduserNavigation.NroDocumento)
            </dd>
        </dl>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Idventa">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>



<div>
    <a id="printPDF" class="btn btn-primary">Print</a>
</div>



@section scripts {
    <script>
        $("#printPDF").click(function () {
            var element = document.getElementById('Ventas');



            html2pdf().from(element).set({
                margin: [30, 30, 15, 30],
                pagebreak: { avoid: 'tr' },



                jsPDF: { orientation: 'portrait', unit: 'pt', format: 'letter', compressPDF: true }
            }).save()
        });</script>
}