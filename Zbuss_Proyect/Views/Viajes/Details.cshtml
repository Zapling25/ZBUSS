@model Zbuss_Proyect.Models.TbDetalleViaje

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles</h1>

<div>
    <h4>Detalles del viaje</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fecha de salida :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaSalida)
        </dd>
        <dt class="col-sm-2">
            Hora de salida :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraSalida)
        </dd>
        <dt class="col-sm-2">
            Hora de llegada :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoraLlegada)
        </dd>
        <dt class="col-sm-2">
            Punto de partida :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PuntoPartida)
        </dd>
        <dt class="col-sm-2">
            Punto de llegada :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PuntoLlegada)
        </dd>
        <dt class="col-sm-2">
            Nro. de asientos :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NroAsientos)
        </dd>
        <dt class="col-sm-2">
            Horas de viaje :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DuracionViaje) Hrs.
        </dd>
        <dt class="col-sm-2">
            Placa de bus :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdbusNavigation.Placa)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Idviaje" type="button" class="btn btn-primary">Editar</a> |
    <a asp-action="Index">Regresar a la lista</a>
</div>
