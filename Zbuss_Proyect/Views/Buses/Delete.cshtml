@model Zbuss_Proyect.Models.TbBus

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Alert != null)
{
    <div class="alert alert-warning alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">X</button>
        <h2><i class="bi bi-exclamation-triangle-fill"></i> Alerta!</h2>
        @ViewBag.Alert
    </div>
}

<h1>Eliminar</h1>

<h3>Estás seguro de eliminar el bus?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Placa :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Placa)
        </dd>
        <dt class="col-sm-2">
            Capacidad :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacidad)
        </dd>
        <dt class="col-sm-2">
            Pisos :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pisos)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Idbus" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
