@model Zbuss_Proyect.Models.TbBus

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles</h1>

<div>
    <h4>Detalles del bus</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Placa :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Placa)
        </dd>
        <dt class="col-sm-2">
            Capacidad :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacidad)
        </dd>
        <dt class="col-sm-2">
            Pisos :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pisos)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Idbus" type="button" class="btn btn-primary">Editar</a> |
    <a asp-action="Index">Regresar a la lista</a>
</div>
