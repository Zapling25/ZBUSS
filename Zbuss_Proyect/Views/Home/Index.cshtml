            var SalidaPa = $('#cboSalida').val();
            var DestinoPa = $('#cboDestino').val();

            var params = {
                FechaSalida: FechaSa,
                PuntoPartida: SalidaPa,
                PuntoLlegada: DestinoPa
            }

            var VG_RUTA_SERVIDOR = "";
            console.log(params);
            $.ajax
                ({
                    type: "POST",
                    url: "/Filtrar/Filtrar",
                    data: { Viaje: params },
                    dataType: "text",
                    success: function (result) {
                        console.log(result);
                        window.top.location.href = VG_RUTA_SERVIDOR + "Filtrar/Index";
                    },
                    error: function (result) {
                        alert("ERROR Al cargar almacen");
                    }
                })
        })
    </script>
